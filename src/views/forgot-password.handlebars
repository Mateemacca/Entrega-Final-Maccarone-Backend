<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<body class="bg-gray-100 h-screen flex items-center justify-center">
  <div class="bg-white p-6 rounded-lg shadow-lg w-full max-w-md text-center">
    {{#if emailSend}}
    <h1 class="text-2xl font-bold text-green-600 my-auto">Email sent!</h1>
    {{else}}
    <h1 class="text-2xl font-bold text-gray-800 mb-6">
      {{#if newTitle}}
      Your link expired, please enter your email to generate a new link.
      {{else}}
      Restore password:
      {{/if}}
    </h1>
    <form action="/api/session/forgot-password" method="post" class="space-y-4">
      <div>
        <label for="email" class="block text-left text-gray-700">Email:</label>
        <input type="email" id="email" name="email"
          class="w-full px-4 py-2 border rounded-lg focus:outline-none focus:ring-2 focus:ring-blue-600" required />
      </div>
      <div class="form-buttons">
        <button type="submit"
          class="w-full bg-blue-500 text-white py-2 rounded-lg hover:bg-blue-600 transition duration-200">Submit</button>
      </div>
    </form>
    {{/if}}
  </div>
</body>