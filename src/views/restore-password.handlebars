<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">

<div class="flex items-center justify-center h-screen">
  <div class="max-w-md mx-auto">
    <div class="bg-gray-800 text-white rounded-lg shadow-lg">
      <div class="px-6 py-8">
        <h4 class="mb-4 text-2xl text-center">Restore your password</h4>
        <form action="/api/session/restore-password" method="post">
          <div class="mb-4">
            <input type="email" name="email" class="w-full px-3 py-2 rounded border-none bg-gray-700 text-white"
              placeholder="Email" autocomplete="off">
          </div>
          <div class="mb-6">
            <input type="password" name="password" class="w-full px-3 py-2 rounded border-none bg-gray-700 text-white"
              placeholder="Password to restore" autocomplete="off">
          </div>
          <button type="submit"
            class="w-full py-2 px-4 bg-blue-500 text-white rounded hover:bg-blue-600">Restore</button>
        </form>
        {{#if samePassword}}
        <p class="text-red-500 mt-4">No puedes usar tu contrase√±a actual!</p>
        {{/if}}
      </div>
    </div>
  </div>
</div>